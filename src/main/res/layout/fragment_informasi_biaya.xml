<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.muf.mymuf.mobilesurvey.fragment.aplikasi.InformasiBiayaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/informasi_biaya_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/notaris_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notaris" />
            <View
                android:id="@+id/line_notaris"
                android:layout_below="@+id/layout1"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorAccent"/>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/notaris_total_biaya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/input_notaris_total_biaya"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:hint="Total Biaya" />

                </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/notaris_biaya_kredit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_notaris_biaya_kredit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:hint="Biaya Kredit" />

            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:id="@+id/biaya_tunai"
                android:layout_below="@+id/line_notaris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:textColor="@color/gray"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Biaya Tunai" />

                <TextView
                    android:id="@+id/txt_biaya_tunai"
                    android:textColor="@color/gray"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:text="0.00"
                    android:inputType="numberDecimal"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="end"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/provisi_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Provisi" />
            <View
                android:id="@+id/line_provinsi"
                android:layout_below="@+id/layout1"
                android:layout_width="100dp"
                android:layout_marginLeft="4dp"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorAccent"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/provisi_total_biaya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_provisi_total_biaya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:hint="Total Biaya" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/provisi_biaya_kredit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_provisi_biaya_kredit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:hint="Biaya Kredit" />

            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:id="@+id/provisi_biaya_tunai"
                android:layout_below="@+id/line_notaris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:textColor="@color/gray"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Biaya Tunai" />

                <TextView
                    android:id="@+id/txt_provisi_biaya_tunai"
                    android:textColor="@color/gray"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:text="0.00"
                    android:inputType="numberDecimal"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="end"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/admin_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginLeft="4dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Admin" />
            <View
                android:id="@+id/line_admin"
                android:layout_below="@+id/layout1"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorAccent"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/admin_total_biaya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_admin_total_biaya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"

                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:hint="Total Biaya" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/admin_biaya_kredit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_admin_biaya_kredit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:hint="Biaya Kredit" />

            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:id="@+id/admin_biaya_tunai"
                android:layout_below="@+id/line_provisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:textColor="@color/gray"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Biaya Tunai" />

                <TextView
                    android:id="@+id/txt_admin_biaya_tunai"
                    android:textColor="@color/gray"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:text="0.00"
                    android:inputType="numberDecimal"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="end"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fiducia_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_marginLeft="4dp"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fiducia" />
            <View
                android:id="@+id/line_fiducia"
                android:layout_below="@+id/layout1"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorAccent"/>

            <RadioButton android:id="@+id/radio_biaya_kredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:theme="@style/RadioButtonStyle"
                android:layout_marginRight="20dp"
                android:text="Biaya Kredit" />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/fiducia_biaya_kredit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/input_fiducia_biaya_kredit"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:inputType="number"/>

            </android.support.design.widget.TextInputLayout>

            <RadioButton android:id="@+id/radio_biaya_tunai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:theme="@style/RadioButtonStyle"
                android:layout_marginRight="20dp"
                android:text="Biaya Tunai" />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/fiducia_biaya_tunai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/input_fiducia_biaya_tunai"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:inputType="number"/>

            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/periode_asuransi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dp">

                    <EditText
                        android:id="@+id/input_periode_asuransi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:hint="Periode Asuransi" />

                </android.support.design.widget.TextInputLayout>
                <CheckBox
                    android:text="Prorate Periode INSR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:textSize="14dp"
                    android:id="@+id/prorate_periode_insr"/>
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

    </ScrollView>

</RelativeLayout>
