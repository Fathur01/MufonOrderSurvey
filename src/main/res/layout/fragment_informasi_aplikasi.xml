<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.muf.mymuf.mobilesurvey.fragment.aplikasi.InformasiAplikasiFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:textColor="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tanggal Aplikasi" />

                    <TextView
                        android:id="@+id/input_tgl_app"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:text="TANGGAL APLIKASI"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="end"/>

                </LinearLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/outlet"
                    android:layout_below="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/input_outlet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:hint="Outlet" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:id="@+id/layout_calender"
                    android:layout_below="@+id/outlet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/janji_survey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/input_janji_survey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:hint="Janji Survey"
                        android:drawableRight="@drawable/ic_calendar"
                        android:drawableEnd="@drawable/ic_calendar" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/input_tgl_pemesanan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:hint="Tanggal Pemesanan"
                        android:drawableRight="@drawable/ic_calendar"
                        android:drawableEnd="@drawable/ic_calendar" />

                </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_below="@+id/layout_calender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Initial Recommendation" />

                    <RadioGroup
                        android:id="@+id/radio_group"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton android:id="@+id/radio_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryDark"
                            android:theme="@style/RadioButtonStyle"
                            android:layout_marginRight="20dp"
                            android:text="REGULAR" />

                        <RadioButton android:id="@+id/radio_instan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryDark"
                            android:theme="@style/RadioButtonStyle"
                            android:text="INSTAN" />

                    </RadioGroup>

                </LinearLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tipe_order"
                    android:layout_below="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/input_tipe_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:hint="Tipe Order"
                        android:drawableRight="@drawable/ic_arrow"
                        android:drawableEnd="@drawable/ic_arrow" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_below="@+id/skema_pembiayaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipe Pembiayaan" />

                    <RadioGroup
                        android:id="@+id/radio_group_2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton android:id="@+id/radio_konvensional"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryDark"
                            android:theme="@style/RadioButtonStyle"
                            android:layout_marginRight="20dp"
                            android:text="KONVENSIONAL" />

                        <RadioButton android:id="@+id/radio_syariah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryDark"
                            android:theme="@style/RadioButtonStyle"
                            android:text="SYARIAH" />

                    </RadioGroup>

                </LinearLayout>




                <LinearLayout
                    android:id="@+id/skema_pembiayaan"
                    android:layout_below="@+id/tipe_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skema Pembiayaan" />

                    <RadioGroup
                        android:id="@+id/radio_group_skema"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton android:id="@+id/radio_PPSA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryDark"
                            android:theme="@style/RadioButtonStyle"
                            android:layout_marginRight="20dp"
                            android:text="PPSA" />

                        <RadioButton android:id="@+id/radio_sales"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryDark"
                            android:theme="@style/RadioButtonStyle"
                            android:text="Sales and Lease Bank" />

                    </RadioGroup>

                </LinearLayout>




                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tujuan_pembiayaan"
                    android:layout_below="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/input_tujuan_pembiayaan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:hint="Tujuan Pembiayaan *"
                        android:drawableRight="@drawable/ic_arrow"
                        android:drawableEnd="@drawable/ic_arrow" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/jenis_channel"
                    android:layout_below="@+id/tujuan_pembiayaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/input_jenis_channel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:hint="Jenis Channel"
                        android:drawableRight="@drawable/ic_arrow"
                        android:drawableEnd="@drawable/ic_arrow" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:id="@+id/layout4"
                    android:layout_below="@id/jenis_channel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/outlet_channel_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="2"
                        android:layout_marginBottom="8dp">

                        <EditText
                            android:id="@+id/input_outlet_channel_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:hint="Outlet Channel"
                            android:drawableRight="@drawable/ic_magni"
                            android:drawableEnd="@drawable/ic_magni" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/produk_pembiayaan"
                    android:layout_below="@+id/layout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/input_produk_pembiayaan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:hint="Produk Pembiayaan"
                        android:drawableRight="@drawable/ic_arrow"
                        android:drawableEnd="@drawable/ic_arrow" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/sumber_nasabah"
                    android:layout_below="@+id/produk_pembiayaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/input_sumber_nasabah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:hint="Sumber Nasabah"
                        android:drawableRight="@drawable/ic_arrow"
                        android:drawableEnd="@drawable/ic_arrow" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/hub_bank"
                    android:layout_below="@+id/sumber_nasabah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/input_hub_bank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:hint="Hubungan dengan Bank"
                        android:drawableRight="@drawable/ic_magni"
                        android:drawableEnd="@drawable/ic_magni" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/cara_bayar"
                    android:layout_below="@+id/hub_bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/input_cara_bayar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:hint="Cara Bayar Angsuran"
                        android:drawableRight="@drawable/ic_arrow"
                        android:drawableEnd="@drawable/ic_arrow" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:id="@+id/rekening_nasabah_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/cara_bayar">
                <TextView
                    android:id="@+id/rekening_nasabah_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:textColor="@color/black"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="Rekening Nasabah" />
                <View
                    android:id="@+id/line_rekening_nasabah"
                    android:layout_width="150dp"
                    android:layout_height="1.5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorAccent"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout5"
                    android:layout_below="@+id/rekening_nasabah_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:textColor="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bank" />

                    <TextView
                        android:id="@+id/input_bank"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:text="BANK"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="end"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout6"
                    android:layout_below="@+id/layout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:textColor="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nomor Rekening" />

                    <TextView
                        android:id="@+id/nomor_rekening"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:text="Nomor Rekening"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="end"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout7"
                    android:layout_below="@+id/layout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:textColor="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nama Rekening" />

                    <TextView
                        android:id="@+id/nama_rekening"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:text="Nama Rekening"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="end"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
