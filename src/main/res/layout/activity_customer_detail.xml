<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.muf.mymuf.mobilesurvey.activity.CustomerDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:titleTextColor="@android:color/white" />

    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/container_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/header_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/layout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/layout1"
                        android:paddingBottom="20dp">

                        <TextView
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nomor KTP" />

                        <TextView
                            android:id="@+id/txt_ktp"
                            android:textColor="@color/gray"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:text="NOMOR KTP"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="end"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/line1"
                        android:layout_below="@+id/layout1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/gray"/>

                    <LinearLayout
                        android:id="@+id/layout2"
                        android:layout_below="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp">

                        <TextView
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nama Lengkap" />

                        <TextView
                            android:id="@+id/txt_nama"
                            android:textColor="@color/gray"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:text="NAMA LENGKAP"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="end"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/line2"
                        android:layout_below="@+id/layout2"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray"/>

                    <LinearLayout
                        android:id="@+id/layout3"
                        android:layout_below="@+id/line2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp">

                        <TextView
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cust. Type" />

                        <TextView
                            android:id="@+id/txt_cust_type"
                            android:textColor="@color/gray"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:text="CUST. TYPE"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="end"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/line3"
                        android:layout_below="@+id/layout3"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray"/>

                    <LinearLayout
                        android:id="@+id/layout4"
                        android:layout_below="@+id/line3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp">

                        <TextView
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Alamat Domisili" />

                        <TextView
                            android:id="@+id/txt_address"
                            android:textColor="@color/gray"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:text="ALAMAT DOMISILI"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="end"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/line4"
                        android:layout_below="@+id/layout4"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray"/>

                    <LinearLayout
                        android:id="@+id/layout5"
                        android:layout_below="@+id/line4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp">

                        <TextView
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tanggal Lahir" />

                        <TextView
                            android:id="@+id/txt_tgl_lahir"
                            android:textColor="@color/gray"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:text="TANGGAL LAHIR"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="end"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/line5"
                        android:layout_below="@+id/layout5"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray"/>

                    <LinearLayout
                        android:id="@+id/layout6"
                        android:layout_below="@+id/line5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp">

                        <TextView
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tempat Lahir" />

                        <TextView
                            android:id="@+id/txt_tempat_lahir"
                            android:textColor="@color/gray"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:text="TEMPAT LAHIR"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="end"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/line6"
                        android:layout_below="@+id/layout6"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray"/>

                    <LinearLayout
                        android:id="@+id/layout7"
                        android:layout_below="@+id/line6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp">

                        <TextView
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nama Pasangan" />

                        <TextView
                            android:id="@+id/txt_nama_pasangan"
                            android:textColor="@color/gray"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:text="NAMA PASANGAN"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="end"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/line7"
                        android:layout_below="@+id/layout7"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray"/>

                    <LinearLayout
                        android:id="@+id/layout8"
                        android:layout_below="@+id/line7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp">

                        <TextView
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nama Ibu" />

                        <TextView
                            android:id="@+id/txt_nama_ibu"
                            android:textColor="@color/gray"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:text="NAMA IBU"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="end"/>

                    </LinearLayout>

                    <View
                        android:id="@+id/line8"
                        android:layout_below="@+id/layout8"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/detail_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/container_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_no_rad_gray"
            android:layout_weight="1"
            android:text="CANCEL" />

        <Button
            android:id="@+id/btn_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_no_rad_alt"
            android:layout_weight="1"
            android:text="INPUT DATA" />

    </LinearLayout>

</RelativeLayout>
