<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@color/lightBlue"
    tools:context="com.muf.mymuf.mobilesurvey.fragment.survey.HasilSurveyFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/informasi_survey_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Informasi Survey" />
            <View
                android:id="@+id/line_info_survey"
                android:layout_width="130dp"
                android:layout_height="1.5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorAccent"/>

            <LinearLayout
                android:id="@+id/informasi_survey_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/informasi_survey_label"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/sumber_info_survey1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/input_sumber_info_survey1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:inputType="number"
                        android:hint="Sumber Info Survey 1*" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/informasi_hasil_survey1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/input_informasi_hasil_survey1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:drawableRight="@drawable/ic_arrow"
                        android:drawableEnd="@drawable/ic_arrow"
                        android:textColor="@color/colorPrimaryDark"
                        android:inputType="number"
                        android:hint="Informasi hasil survey 1*" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/sumber_info_survey2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/input_sumber_info_survey2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:inputType="number"
                        android:hint="Sumber Info Survey 2" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/informasi_hasil_survey2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/input_informasi_hasil_survey2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:focusable="false"
                        android:drawableRight="@drawable/ic_arrow"
                        android:drawableEnd="@drawable/ic_arrow"
                        android:inputType="number"
                        android:hint="Informasi hasil survey 2" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/survey_notes_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/informasi_survey_container"
                android:focusable="false"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Survey Notes" />
            <View
                android:id="@+id/line_surveynotes"
                android:layout_width="130dp"
                android:layout_height="1.5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorAccent"/>

            <LinearLayout
                android:id="@+id/survey_notes_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/survey_notes_label"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/survey_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/input_survey_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:textColor="@color/colorPrimaryDark"
                        android:inputType="number"
                        android:hint="Survey Notes" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/signature_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/survey_notes_container"
                android:focusable="false"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Signature" />
            <View
                android:id="@+id/line_signature"
                android:layout_width="130dp"
                android:layout_height="1.5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorAccent"/>

            <LinearLayout
                android:id="@+id/signature_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.github.gcacace.signaturepad.views.SignaturePad
                    android:id="@+id/signature_pad"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    app:penColor="@android:color/black"
                    android:background="@drawable/frame_signature" />

                <ImageButton
                    android:id="@+id/btn_clear_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/bpTransparent"
                    android:src="@drawable/ic_close"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
