<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.muf.mymuf.mobilesurvey.fragment.aplikasi.AsuransiKerugianFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/perusahaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_perusahaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:focusable="false"
                    android:hint="Perusahaan*"
                    android:drawableRight="@drawable/ic_arrow"
                    android:drawableEnd="@drawable/ic_arrow"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/jenis_asuransi"
                android:layout_below="@id/perusahaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_jenis_asuransi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:focusable="false"
                    android:hint="Jenis Asuransi"
                    android:drawableRight="@drawable/ic_arrow"
                    android:drawableEnd="@drawable/ic_arrow" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_below="@id/jenis_asuransi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:textColor="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Biaya Tunai Asuransi" />

                <TextView
                    android:id="@+id/input_biaya_tunai_asuransi"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:text="BIAYA TUNAI ASURANSI"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_below="@id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:textColor="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Biaya Kredit Asuransi" />

                <TextView
                    android:id="@+id/input_biaya_kredit_asuransi"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:text="BIAYA KREDIT ASURANSI"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_below="@id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:textColor="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Biaya Total Asuransi" />

                <TextView
                    android:id="@+id/input_biaya_total_asuransi"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:text="BIAYA TOTAL ASURANSI"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout4"
                android:layout_below="@id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:textColor="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tenor Asuransi" />

                <TextView
                    android:id="@+id/input_tenor_asuransi"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:text="TENOR ASURANSI"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout5"
                android:layout_below="@id/layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp">

                <TextView
                    android:textColor="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Usia Kendaraan s/d Akhir Tenor" />

                <TextView
                    android:id="@+id/input_usia_kendaraan"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:text="USIA KENDARAAN S/D AKHIR TENOR"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="end"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/basic_net_insurance"
                android:layout_below="@id/layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_basic_net_insurance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:hint="Basic Net Insurance" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/basic_gross_insurance"
                android:layout_below="@id/basic_net_insurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_basic_gross_insurance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:hint="Basic Gross Insurance" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/gross_insurance_default"
                android:layout_below="@id/basic_gross_insurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_gross_insurance_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:hint="Gross Insurance Default" />

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
