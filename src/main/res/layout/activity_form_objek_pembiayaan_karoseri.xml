<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.muf.mymuf.mobilesurvey.activity.FormObjekPembiayaanKaroseriActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/jenis_karoseri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_jenis_karoseri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:focusable="false"
                    android:hint="Jenis Karoseri"
                    android:drawableRight="@drawable/ic_arrow"
                    android:drawableEnd="@drawable/ic_arrow" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_below="@+id/jenis_karoseri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:textColor="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jumlah Karoseri" />

                <TextView
                    android:id="@+id/input_jumlah_karoseri"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:text="JUMLAH KAROSERI"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="end"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/harga_karoseri"
                android:layout_below="@id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_harga_karoseri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:hint="Harga Karoseri"
                    android:inputType="number"/>

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_below="@id/harga_karoseri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/daftar_supplier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="2"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/input_daftar_supplier"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:hint="Daftar Supplier"
                        android:drawableRight="@drawable/ic_magni"
                        android:drawableEnd="@drawable/ic_magni" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/jenis_supplier"
                android:layout_below="@id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/input_jenis_supplier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:focusable="false"
                    android:hint="Jenis Supplier"
                    android:drawableRight="@drawable/ic_arrow"
                    android:drawableEnd="@drawable/ic_arrow" />

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
